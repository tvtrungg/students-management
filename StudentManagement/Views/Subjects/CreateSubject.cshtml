@model StudentManagement.Models.Entities.Subject
@{
    ViewData["Title"] = "CreateSubject";
}

<h1>Create Subject</h1>

<hr />
<div class="w-50 mx-auto shadow p-5 rounded-8">
    <form asp-action="CreateSubject" method="post" class="d-flex flex-column gap-3">
        <div class="form-group col">
            <label class="control-label"> Code</label>
            <input type="text" class="form-control" placeholder="Enter Code" asp-for="Code" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
        <div class="form-group col">
            <label class="control-label"> Name</label>
            <input type="text" class="form-control" placeholder="Enter Name" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col">
            <label class="control-label"> Description</label>
            <input type="text" class="form-control" placeholder="Enter Description" asp-for="Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group mx-auto">
            <input type="submit" value="Create" class="btn btn-primary px-4 mt-3" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
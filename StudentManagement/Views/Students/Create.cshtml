@model StudentManagement.Models.Entities.Student
@{
    ViewData["Title"] = "Create";
}

<h1>Create Student</h1>

<hr />
<div class="w-50 mx-auto shadow p-5 rounded-8">
    <form asp-action="Create" method="post" class="d-flex flex-column gap-3">
        <div class="form-group row">
            <div class="form-group col">
                <label class="control-label">Username</label>
                <input type="text" class="form-control" placeholder="Enter your username" asp-for="Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <label class="control-label">Password</label>
                <input type="password" class="form-control" placeholder="Enter your password" asp-for="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="form-group col">
                <label class="control-label">Name</label>
                <input type="text" class="form-control" placeholder="Enter your name" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <label class="control-label">Phone</label>
                <input type="number" class="form-control" placeholder="Enter your phone" asp-for="Phone" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">Email</label>
            <input type="email" class="form-control" placeholder="Enter your email" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group mx-auto">
            <input type="submit" value="Create" class="btn btn-primary px-4 mt-3" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>